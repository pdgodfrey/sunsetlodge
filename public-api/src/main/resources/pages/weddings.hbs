                                {{#each this.thumbs}}
                                  <div class="col-sm-2">
                                    <div class="thumbnail mx-auto d-block {{#if @first}}current-image{{/if}}" onclick="selectThumbnail(this);">
                                      <img src="{{thumb_url}}" alt="Image" class="img-responsive">
                                    </div>
                                  </div>
                                {{/each}}
                              </div>
                            </div>
                          {{ else }}
                            <div class="carousel-item">
                              <div class="row">
                                {{#each this.thumbs}}
                                  <div class="col-sm-2">
                                    <div class="thumbnail mx-auto d-block"  onclick="selectThumbnail(this);">
                                      <img src="{{thumb_url}}" alt="Image" class="img-responsive">
                                    </div>
                                  </div>
                                {{/each}}
                              </div>
                            </div>
                          {{/if}}
                        {{/each}}
                      </div>
                      <button class="carousel-control-prev" type="button" data-bs-target="#{{this.anchor}}-carousel-thumbnails" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                      </button>
                      <button class="carousel-control-next" type="button" data-bs-target="#{{this.anchor}}-carousel-thumbnails" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                      </button>
                    </div>
                  </div>
                </div>
              {{/if}}
            {{/each}}
          </div>


          </div>
        </div>


      </article>
    </div>
  </div>

  <script src="./js/weddings.js"></script>
{{/partial}}

