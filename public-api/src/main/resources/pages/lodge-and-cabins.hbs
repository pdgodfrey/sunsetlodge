                                      <img src="{{thumb_url}}" alt="Image" class="img-responsive">
                                    </div>
                                  </div>
                                {{/each}}
                              </div>
                            </div>
                          {{ else }}
                            <div class="carousel-item">
                              <div class="row">
                                {{#each this.thumbs}}
                                  <div class="col-sm-2">
